</div>
{if $sesion==="admin"} 
    <div class="container">
        <h1> Insertar Categoria </h1>
            <form action="insertCategoria" method="POST">
                <div class="form-group">
                    <label>Nombre</label>
                    <input type="text" class="form-control" name="nombreCategoria">
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form> 
    </div>
{/if}
